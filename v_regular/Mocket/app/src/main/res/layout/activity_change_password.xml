<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity"
    android:background="#efefef">

    <android.support.v7.widget.Toolbar
        android:id="@+id/CHANGEPASSWORD_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:titleTextColor="@color/mocket_dark_purple"
        android:background="?attr/colorPrimary"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22dp"
            android:text="Change Password"
            android:textStyle="bold"
            android:textColor="@color/mocket_dark_purple"/>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:background="@drawable/border_shadow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/CHANGEPASSWORD_textView_passwordRule"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Password should \n- be at least 8 digits long.\n- contain at least 1 uppercase."
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.5"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="9">

                        <EditText
                            android:id="@+id/CHANGEPASSWORD_editText_password1"
                            android:layout_below="@id/CHANGEPASSWORD_textView_passwordRule"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:hint="Password"
                            android:inputType="textPassword"/>

                        <EditText
                            android:id="@+id/CHANGEPASSWORD_editText_password2"
                            android:layout_below="@id/CHANGEPASSWORD_editText_password1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:hint="Confirm password"
                            android:inputType="textPassword"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_weight="6"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:orientation="horizontal"></LinearLayout>
                            <Button
                                android:id="@+id/CHANGEPASSWORD_button_change"
                                android:layout_weight="4"
                                android:paddingTop="10dp"
                                android:text="Change"
                                android:onClick="changePassword"
                                android:layout_below="@id/CHANGEPASSWORD_editText_password2"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:textColor="@color/mocket_dark_purple"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        </LinearLayout>

        -->


    </LinearLayout>






</LinearLayout>