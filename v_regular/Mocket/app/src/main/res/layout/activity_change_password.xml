<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mocket_fragment_background"
    android:orientation="vertical"
    tools:context=".activities.ChangePasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/CHANGEPASSWORD_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/mocket_actionBar"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/mocket_font_dark">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_button"
            android:clickable="true"
            android:onClick="goPreviousActivity"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Change Password"
            android:textColor="@color/mocket_font_dark"
            android:textSize="22dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/border_shadow"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/CHANGEPASSWORD_textView_passwordRule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:text="Password should \n- be at least 8 digits long.\n- contain at least 1 uppercase."
                    android:textColor="@color/mocket_font_dark"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/CHANGEPASSWORD_editText_password1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/CHANGEPASSWORD_textView_passwordRule"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="@color/mocket_font"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:backgroundTint="@color/mocket_cursor"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />

                        <EditText
                            android:id="@+id/CHANGEPASSWORD_editText_password2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_below="@id/CHANGEPASSWORD_editText_password1"
                            android:hint="Confirm password"
                            android:textColor="@color/mocket_font"
                            android:textCursorDrawable="@drawable/cursor_color"
                            android:backgroundTint="@color/mocket_cursor"
                            android:inputType="textPassword"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="6"
                                android:orientation="horizontal"></LinearLayout>

                            <Button
                                android:id="@+id/CHANGEPASSWORD_button_change"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/CHANGEPASSWORD_editText_password2"
                                android:layout_weight="4"
                                android:onClick="changePassword"
                                android:paddingTop="10dp"
                                android:text="Change"
                                android:textColor="#ffffff"
                                android:backgroundTint="@color/mocket_button" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="vertical" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        </LinearLayout>

        -->


    </LinearLayout>


</LinearLayout>