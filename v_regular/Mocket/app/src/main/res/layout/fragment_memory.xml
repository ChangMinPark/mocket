<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoryFragment"
    android:background="#efefef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/MEMORY_linearLayout_addToMemory"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:background="@drawable/border_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:weightSum="10"
                    android:background="@drawable/title_bottom_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:text="Add to Memory"
                        android:textStyle="bold"
                        android:textColor="@color/mocket_dark_purple"
                        android:textSize="17dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    >

                    <EditText
                        android:id="@+id/MEMORY_editText_term"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:hint="Term"
                        android:layout_weight="6.5"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>

                    <Button
                        android:id="@+id/MEMORY_button_lookUp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/mocket_dark_purple"
                        android:layout_weight="3"
                        android:text="Look Up"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    >

                    <EditText
                        android:id="@+id/MEMORY_editText_definition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:hint="Definition"
                        android:lines="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:weightSum="10"
                    >


                    <TextView
                        android:id="@+id/MEMORY_textView_clear"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:text="Clear"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:textColor="@color/mocket_dark_purple"
                        android:clickable="true" />



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"/>

                    <Button
                        android:id="@+id/MEMORY_button_memorize"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/mocket_dark_purple"
                        android:layout_weight="4"
                        android:text="Memorize !" />

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/MEMORY_linearLayout_todaysMemory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_shadow"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:weightSum="10"
                    android:background="@drawable/title_bottom_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:text="Today's Memory"
                        android:textStyle="bold"
                        android:textColor="@color/mocket_dark_purple"
                        android:textSize="17dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >

                    <SearchView
                        android:id="@+id/MEMORY_searchView_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/all_border">

                    </SearchView>
                </LinearLayout>

                <ListView
                    android:id="@+id/MEMORY_listView_termList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                </ListView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <ImageView
                        android:id="@+id/MEMORY_imageView_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/expand_button"
                        android:clickable="true"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>