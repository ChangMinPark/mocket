<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mocket_fragment_background"
    android:orientation="vertical"
    tools:context=".activities.SignUpActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/SIGNUP_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/mocket_actionBar"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/mocket_font">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_button"
            android:clickable="true"
            android:onClick="goPreviousActivity"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/mocket_font"
            android:textSize="22dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_shadow"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">

                            <!-- Profile Image -->
                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/SIGNUP_imageView_profile"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:onClick="addProfileImage"
                                android:src="@drawable/add_image"
                                app:civ_border_color="@color/mocket_font"
                                app:civ_border_width="2dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">

                                <EditText
                                    android:id="@+id/SIGNUP_editText_firstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:hint="First Name"
                                    android:textColor="@color/mocket_font"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:backgroundTint="@color/mocket_cursor"
                                    android:textAlignment="center" />


                                <EditText
                                    android:id="@+id/SIGNUP_editText_lastName"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:hint="Last Name"
                                    android:textColor="@color/mocket_font"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:backgroundTint="@color/mocket_cursor"
                                    android:textAlignment="center" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <EditText
                                    android:id="@+id/SIGNUP_editText_email"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6.5"
                                    android:hint="Email address"
                                    android:textColor="@color/mocket_font"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:backgroundTint="@color/mocket_cursor"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="20dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.5" />

                                <Button
                                    android:id="@+id/SIGNUP_button_send"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:onClick="send"
                                    android:text="Send"
                                    android:textColor="#ffffff"
                                    android:backgroundTint="@color/mocket_button" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:paddingLeft="10dp"
                                android:text="Verification code will be sent to this Email address."
                                android:textColor="@color/mocket_font_dark" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <EditText
                                        android:id="@+id/SIGNUP_editText_verificationCode"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="5"
                                        android:hint="Verification Code"
                                        android:textColor="@color/mocket_font"
                                        android:textCursorDrawable="@drawable/cursor_color"
                                        android:backgroundTint="@color/mocket_cursor"
                                        android:textAlignment="center" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1" />

                                    <Button
                                        android:id="@+id/SIGNUP_button_verify"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:onClick="verify"
                                        android:text="Verify"
                                        android:textColor="#ffffff"
                                        android:backgroundTint="@color/mocket_button"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/SIGNUP_textView_passwordRule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="20dp"
                            android:text="Password should \n- be at least 8 digits long.\n- contain at least 1 uppercase."
                            android:textColor="@color/mocket_font_dark"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5" />

                                    <EditText
                                        android:id="@+id/SIGNUP_editText_password1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="9"
                                        android:hint="Password"
                                        android:textColor="@color/mocket_font"
                                        android:textCursorDrawable="@drawable/cursor_color"
                                        android:backgroundTint="@color/mocket_cursor"
                                        android:inputType="textPassword"
                                        android:paddingLeft="20dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5" />

                                    <EditText
                                        android:id="@+id/SIGNUP_editText_password2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="9"
                                        android:hint="Confirm Password"
                                        android:textColor="@color/mocket_font"
                                        android:textCursorDrawable="@drawable/cursor_color"
                                        android:backgroundTint="@color/mocket_cursor"
                                        android:inputType="textPassword"
                                        android:paddingLeft="20dp" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="7" />

                                    <Button
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="3"
                                        android:onClick="signUp"
                                        android:text="Sign Up"
                                        android:textColor="#ffffff"
                                        android:backgroundTint="@color/mocket_button" />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>